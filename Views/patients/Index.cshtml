@model IEnumerable<WebApplication2.patient>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdmitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                <div class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.id })</div>  |
                <div class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.id })</div> |
                <div class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.id })</div>
            </td>

        </tr>
    }

</table>

